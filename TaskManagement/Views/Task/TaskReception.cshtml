@model List<TaskManagement.ViewModel.TaskReceptionViewModel>
   <header>
        <img src="~/image/Saudi_Vision_2030_logo.svg.png" alt="Vision 2030" class="logo-left" asp-append-version="true">
        <div class="header-text">
            <h1>أمانة منطقة حائل</h1>
            <h2>HAIL REGION MUNICIPALITY</h2>
        </div>
        <img src="~/image/logo1.png" alt="Hail Region Municipality" class="logo-right" asp-append-version="true">
    </header>
<h2 class="my-4">استقبال المهام</h2>
<link rel="stylesheet" href="~/css/Css.Css" asp-append-version="true">


<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">اسم المرسل</th>
            <th scope="col">العنوان</th>
            <th scope="col">الوصف</th>
            <th scope="col">الأولوية</th>
            <th scope="col">الموعد النهائي</th>
            <th scope="col">الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.SenderFullName</td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Priority</td>
                <td>
                    @task.Deadline?.ToString("yyyy-MM-dd") @Html.Raw("&nbsp;") @task.Deadline?.ToString("hh:mm tt")
                </td>


                <td>
                    <div class="d-flex">
                        <form method="post" asp-action="AcceptTask" class="me-2">
                            <input type="hidden" name="taskId" value="@task.TaskId" />
                            <button type="submit" class="btn btn-success btn-sm">قبول</button>
                        </form>
                        <form method="post" asp-action="RejectTask">
                            <input type="hidden" name="taskId" value="@task.TaskId" />
                            <button type="submit" class="btn btn-danger btn-sm">رفض</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
