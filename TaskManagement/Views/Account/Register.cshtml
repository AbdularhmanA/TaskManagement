@using TaskManagement.ViewModel
@model RegisterViewModel
@{
    ViewData["Title"] = "تسجيل الدخول";



    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container" dir="rtl">
    <div class="account-box">
        <h2 class="text-center mb-4">إنشاء حساب</h2>
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- الحقول الأولى بشكل أفقي -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="UserID" class="form-label">الرقم الوظيفي</label>
                    <input asp-for="UserID" class="form-control" />
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="FullName" class="form-label">الاسم الكامل</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="jobtitle" class="form-label">المسمى الوظيفي</label>
                    <input asp-for="jobtitle" class="form-control" />
                    <span asp-validation-for="jobtitle" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="JobPosition" class="form-label">الوظيفة</label>
                    <select asp-for="JobPosition" class="form-select">
                        <option value="" disabled selected>اختر المنصب الوظيفي</option>
                        <option value="مدير">مدير</option>
                        <option value="موظف">موظف</option>
                    </select>
                    <span asp-validation-for="JobPosition" class="text-danger"></span>
                </div>
            </div>

            <!-- البريد الإلكتروني يأخذ مساحة أكبر -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- حقل كلمة المرور وتأكيد كلمة المرور في سطر واحد -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Password" class="form-label">كلمة المرور</label>
                    <div class="input-group">
                        <input asp-for="Password" class="form-control" id="passwordInput" type="password" />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('passwordInput')">👁️</button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">تأكيد كلمة المرور</label>
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" class="form-control" id="confirmPasswordInput" type="password" />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('confirmPasswordInput')">👁️</button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <!-- زر الإرسال -->
            <div class="text-center mt-4">
                <input type="submit" value="إنشاء الحساب" class="btn btn-success w-100 p-2" />
            </div>

            <p class="text-center mt-3">
                لديك حساب بالفعل؟ <a asp-controller="Account" asp-action="Login" class="text-decoration-none">تسجيل الدخول</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
    <script src="~/js/HidePassword.js"></script>
}
